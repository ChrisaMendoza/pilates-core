<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20260213000000-0-add-phone-column" author="jhipster">
        <addColumn tableName="jhi_user">
            <column name="phone" type="varchar(20)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20260213000000-0-fix-empty-phones" author="jhipster">
        <sql>UPDATE jhi_user SET phone = NULL WHERE phone = '';</sql>
    </changeSet>

    <changeSet id="20260213000000-1" author="jhipster">
        <addUniqueConstraint tableName="jhi_user" columnNames="phone" constraintName="ux_jhi_user__phone"/>
    </changeSet>
</databaseChangeLog>
